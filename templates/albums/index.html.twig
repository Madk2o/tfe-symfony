{% extends 'base.html.twig' %}

{% block title %}Albums index{% endblock %}

{% block body %}
    <h1 class="font-monospace text-center bg-dark text-warning m-0 p-0">Choose your album</h1>

    <table class="font-monospace table table-dark table-bordered border-dark">
        <thead class="text-warning">
            <tr>
                <th>Num√©ro</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.albumid }}</td>
                <td><a href="{{ path('albums_tracks',{'albumid': album.albumid, 'artistid': album.artistid.artistid } ) }}" >{{ album.title }}</td>
                <td class="d-flex justify-content-center">
                    <a href="{{ path('albums_show', {'albumid': album.albumid}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('albums_edit', {'albumid': album.albumid}) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(albums) }}
    </div>
    <div class="d-flex justify-content-center bg-dark m-2">
        <a href="{{ path('albums_new') }}" class="btn btn-warning m-2">Ajout nouveau</a>
        <a class="navbar-brand img" href="{{ path('artists_index') }}"><img src="{{ asset('images/Rock&Roule5.jpg') }}"/></a>
    </div>
{% endblock %}
