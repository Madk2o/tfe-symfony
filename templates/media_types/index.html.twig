{% extends 'base.html.twig' %}

{% block title %}Rock & Roule{% endblock %}

{% block body %}
    <h1 class="font-monospace text-center bg-dark text-warning m-0 p-0">MediaTypes index</h1>

    <table class="font-monospace table table-dark table-bordered border-dark ">
        <thead class="text-warning">
            <tr>
                <th>Mediatypeid</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for media_type in media_types %}
            <tr class="text-light">
                <td>{{ media_type.mediatypeid }}</td>
                <td>{{ media_type.name }}</td>
                <td class="d-flex justify-content-center">
                    <a href="{{ path('media_types_show', {'mediatypeid': media_type.mediatypeid}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('media_types_edit', {'mediatypeid': media_type.mediatypeid}) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(media_types) }}
    </div>
    <div class="d-flex justify-content-center bg-dark m-2">
        <a href="{{ path('media_types_new') }}" class="btn btn-warning m-2">Ajout nouveau</a>
        <a class="navbar-brand img" href="{{ path('artists_index') }}"><img src="{{ asset('images/Rock&Roule5.jpg') }}"/></a>
    </div>
{% endblock %}
