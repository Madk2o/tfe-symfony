{% extends 'base.html.twig' %}

{% block title %}Rock & Roule{% endblock %}

{% block body %}
    <h1 class="font-monospace text-center bg-dark text-warning m-0 p-0">Tracks </h1>

    <table class="font-monospace table table-dark table-bordered border-dark">
        <thead class="text-warning">
            <tr>
                <th>Num√©ro</th>
                <th>Nom</th>
                <th>Composer</th>
                <th>Milliseconds</th>
                <th>Bites</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.trackid }}</td>
                <td>{{ track.name }}</td>
                <td>{{ track.composer }}</td>
                <td>{{ track.milliseconds }}</td>
                <td>{{ track.bytes }}</td>
                <td class="d-flex justify-content-center">
                    <a href="{{ path('tracks_show', {'trackid': track.trackid}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('tracks_edit', {'trackid': track.trackid}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(tracks) }}
    </div>
    <div class="d-flex justify-content-center bg-dark">
        <a href="{{ path('tracks_new') }}" class="btn btn-warning m-2">Ajout Nouveau</a>
        <a class="navbar-brand img" href="{{ path('albums_index') }}"><img src="{{ asset('images/Rock&Roule5.jpg') }}"/></a>
    </div>
{% endblock %}
